<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 1. Disable Cleartext Traffic (HTTP) Globally -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- 2. SSL Pinning for Backend -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">zerokeep.vercel.app</domain>
        <!-- EXTENDED VALIDITY -->
        <pin-set expiration="2030-01-01">
            <!-- Leaf Certificate (Vercel/Let's Encrypt - Rotates every 90 days) -->
            <pin digest="SHA-256">DZM9Oxxp3uxt5JJnpUtfT6flVVHLDXP55RI/BtoaY1E=</pin>
            <!-- Backup 1: Let's Encrypt R3 (Intermediate) -->
            <pin digest="SHA-256">jQJTbIh0grw0/1TkHSumWb+Fs0Ggogr621gT3PvPKG0=</pin>
            <!-- Backup 2: ISRG Root X1 (Root CA) - Valid until 2035 -->
            <pin digest="SHA-256">C5+lpZ7tcVwmwQIMcRtPbsQtWLABXhQzejna0wHFr8M=</pin>
        </pin-set>
    </domain-config>
</network-security-config>
